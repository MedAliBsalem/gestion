<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  {% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
  {% endblock %}
</head>
<body>
  <nav class="bg-white w-full">
    <div class="mx-auto w-full px-10">
      <div class="relative flex h-16 items-center justify-between">
        <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
          <!-- Mobile menu button-->
          <button type="button"
            class="inline-flex items-center justify-center rounded-md p-2 text-gray-400 hover:bg-gray-700 hover:text-white focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white"
            aria-controls="mobile-menu" aria-expanded="false">
            <span class="sr-only">Open main menu</span>
            <!--
              Icon when menu is closed.
  
              Menu open: "hidden", Menu closed: "block"
            -->
            <svg class="block h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
              aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
            </svg>
            <!--
              Icon when menu is open.
  
              Menu open: "block", Menu closed: "hidden"
            -->
            <svg class="hidden h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
              aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        <div class="flex flex-1 items-center justify-center sm:items-stretch sm:justify-start">
          <div class="flex flex-shrink-0 items-center">
            <img class="block h-8 w-auto lg:hidden"
              src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=500" alt="Your Company">
            <img class="hidden h-8 w-auto lg:block"
              src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=500" alt="Your Company">
          </div>
        </div>
        <div class="absolute inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0">
          <a href="{{path('app_patient',{'id':idVariable})}}" type="button" class=" flex items-center bg-amber-400 mr-4 rounded-lg text-sm px-4 py-2">
            <span class="mr-2">Profil</span>
            <span>
              <svg width="24px"  height="24px"  viewBox="0 0 24 24" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                <title>Iconly/Light/Profile</title>
                <g id="Iconly/Light/Profile" stroke="#000000"  stroke-width="1.5"  fill="none" fill-rule="evenodd" stroke-linecap="round" stroke-linejoin="round">
                    <g id="Profile" transform="translate(4.814286, 2.814476)" stroke="#000000" >
                        <path d="M7.17047619,12.531714 C3.30285714,12.531714 -4.08562073e-14,13.1164759 -4.08562073e-14,15.4583807 C-4.08562073e-14,17.8002854 3.28190476,18.4059997 7.17047619,18.4059997 C11.0380952,18.4059997 14.34,17.8202854 14.34,15.479333 C14.34,13.1383807 11.0590476,12.531714 7.17047619,12.531714 Z" id="Stroke-1" stroke-width="1.5" ></path>
                        <path d="M7.17047634,9.19142857 C9.70857158,9.19142857 11.7657144,7.13333333 11.7657144,4.5952381 C11.7657144,2.05714286 9.70857158,-5.32907052e-15 7.17047634,-5.32907052e-15 C4.6323811,-5.32907052e-15 2.574259,2.05714286 2.574259,4.5952381 C2.56571443,7.1247619 4.60952396,9.18285714 7.13809539,9.19142857 L7.17047634,9.19142857 Z" id="Stroke-3" stroke-width="1.5" ></path>
                    </g>
                </g>
            </svg>
            </span>
          </a>
          <a href="{{ path('app_logout') }}" type="button" class="flex items-center border-2 border-gray-400 bg-white text-gray-600 mr-4 rounded-lg text-sm px-4 py-2">
            <span class="mr-2">Déconnexion</span>
            <span>
              <svg width="24px"  height="24px"  viewBox="0 0 24 24" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                <title>Iconly/Light/Logout</title>
                <g id="Iconly/Light/Logout" stroke="#000000"  stroke-width="1.5"  fill="none" fill-rule="evenodd" stroke-linecap="round" stroke-linejoin="round">
                    <g id="Logout" transform="translate(2.000000, 2.000000)" stroke="#475569"  stroke-width="1.5" >
                        <path d="M13.016,5.3895 L13.016,4.4565 C13.016,2.4215 11.366,0.7715 9.331,0.7715 L4.456,0.7715 C2.422,0.7715 0.772,2.4215 0.772,4.4565 L0.772,15.5865 C0.772,17.6215 2.422,19.2715 4.456,19.2715 L9.341,19.2715 C11.37,19.2715 13.016,17.6265 13.016,15.5975 L13.016,14.6545" id="Stroke-1"></path>
                        <line x1="19.8095" y1="10.0214" x2="7.7685" y2="10.0214" id="Stroke-3"></line>
                        <polyline id="Stroke-5" points="16.8812 7.1063 19.8092 10.0213 16.8812 12.9373"></polyline>
                    </g>
                </g>
            </svg>
            </span>
          </a>

       
        </div>
      </div>
    </div>
  </nav>
  <section class="px-10 flex-col items-center content-center h-2/3">
    <div
      class="flex-col relative items-center bg-gradient-to-r from-sky-300 to-emerald-100 p-10 rounded-3xl h-96 w-full">
      <div class="flex items-center">
        <h1 class="text-sky-950 text-start text-7xl font-bold">Nous travaillons pour votre santé à chaque visite.</h1>
        <img class="w-80" src="{{ asset('images/bg-image.png') }}" alt="">
      </div>
      <div class="absolute inset-x-auto -bottom-10 bg-white w-fit h-11 p-12 drop-shadow-lg flex items-center rounded-2xl m-auto">
  
          <div class="flex content-between w-full">
              <form class="flex " action="{{ path('addRdv', {'id': idVariable}) }}" method="POST">
                {{ form_start(form) }}
                <div>
                    {{ form_widget(form.date) }}
                </div>
                <div>
                    {{ form_widget(form.time) }}
                </div>
                <button type="submit"
                          class="text-white bg-amber-500 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm sm:w-auto px-5 py-2.5 text-center">
                          Reservez</button>

                {{ form_end(form) }}
            </form>
          </div>
      </div>

      
    </div>

  </section>
  <footer class="flex justify-between items-center h-48 px-11">
    <div class="flex mr-9 items-center ">
      <img class="me-4" src="{{ asset('images/Add-User.svg') }}" alt="Add-User">
      <p class="text-3xl font-semibold text-dark100">S'inscrire</p>
  </div>
    <div class="flex mr-9 items-center ">
        <img class="me-4" src="{{ asset('images/Calendar.svg') }}" alt="Calendar">
        <p class="text-3xl font-semibold text-dark100">Choisir votre rendez-vous</p>
    </div>
    <div class="flex items-center ">
        <img class="me-4" src="{{ asset('images/Heart.svg') }}" alt="Heart">
        <p class="text-3xl font-semibold text-dark100">Consultez votre docteur</p>
    </div>
</footer>
</body>
</html>